{
  "scripts": {
    "typecheck": "tsc",
    "lint": "eslint . --fix",
    "test": "vitest",
    "dev": "pnpm --filter extension dev",
    "build": "pnpm --filter extension build",
    "build-packages": "pnpm --filter \"./packages/*\" build",
    "dist": "pnpm --filter extension dist",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.3",
    "@initia/bin": "workspace:^",
    "@initia/eslint-config-react-app": "workspace:^",
    "@tsconfig/vite-react": "^3.0.2",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.4",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix --max-warnings=0",
    "*": "prettier --write --ignore-unknown"
  }
}
